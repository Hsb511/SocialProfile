<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="ic_comments_primary" format="reference"/>
    <attr name="ic_arrow_back" format="reference"/>
    <attr name="ic_thumb_up_primary" format="reference"/>
    <!-- Base application theme. -->
    <style name="Theme.SocialProfile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_steel_blue</item>
        <item name="colorPrimaryVariant">@color/lapis_lazuli</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_lavender</item>
        <item name="colorSecondaryVariant">@color/lilac_luster</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">@color/dim_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="ic_arrow_back">@drawable/ic_arrow_back_light</item>
        <item name="ic_thumb_up_primary">@drawable/ic_thumb_up_primary_dark</item>
        <item name="ic_comments_primary">@drawable/ic_comments_primary_dark</item>
    </style>
</resources>